<div class="grid-x grid-padding-x">
  <div class="large-12 cell">
    <h3 class="text-center"><%= @params[:institute].to_s %></h3>
  </div>

  <div class="large-12 cell">
    <div class="grid-x grid-padding-x">
      <div class="cell large-4">Общее количество учеников в школе: <%= @params[:statistics][:all] %></div>
      <div class="cell large-4">Девочек: <%= @params[:statistics][:female] %></div>
      <div class="cell large-4">Мальчиков: <%= @params[:statistics][:male] %></div>
    </div>
  </div>

  <div class="button-group">
    <% unless @params[:flag] %>
      <a class="button" href="<%= "/institute/" + @params[:institute].id.to_s + "/reverse" %>">↑/↓</a>
    <% else %>
      <a class="button" href="<%= "/institute/" + @params[:institute].id.to_s %>">↑/↓</a>
    <%end %>
    <a class="button" href="/">Назад</a>
  </div>

  <div class="large-12 cell">
    <div class="grid-x grid-padding-x">
      <table>
        <tbody>
          <% @params[:institute].all_classes(@params[:flag]).each do |obj_class| %>
            <tr>
              <td>
                <a href="<%= "/institute/" + @params[:institute].id.to_s + "/class/" + obj_class.id.to_s %>"><%= obj_class.to_s %></a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>