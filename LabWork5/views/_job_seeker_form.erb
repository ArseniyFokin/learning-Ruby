<% form({method: :post}, {obj: @parameters}) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:surname, type: :text, label: 'Фамилия', placeholder: "Иванов") %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:name, type: :text, label: "Имя", placeholder: "Иван") %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:patronymic, type: :text, label: "Отчество", placeholder: "Иванович") %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:date_of_birth, type: :date, label: "Дата рождения") %>
    </div>
    <div class="large-12 cell">
      <% if form_type.eql? "Изменить" %>
        <%= f.input(:education, type: :select, label: "Образование", options: EducationType.all_types) %>
      <% else %>
        <%= f.input(:education, type: :select, label: "Образование", options: EducationType.all_types, add_blank: true) %>
      <%end %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:specialty, type: :text, label: "Специальность", placeholder: "Повар") %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:desired_salary, type: :number, label: "Желаемая зарплата", placeholder: "32000") %>
    </div>
    <div class="large-12 cell">
      <%= f.input(:unwanted_companies, type: :text, label: "Нежелательные компании", placeholder: "Магнит, Пятёрочка") %>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: form_type, class: 'button') %>
      <a href='<%= back_location%>' class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>